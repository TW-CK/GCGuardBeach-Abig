.productNav {
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei";
}

.left {
  width: 20%;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.left view {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}

.selected {
  border-left: 2px solid #2b85e4;
  font-weight: bold;
  color: #2b85e4;
  background-color: #f8f8f9;
  font-size: 0.8rem;
}

.normal {
  color: #1c2438;
  font-size: 0.8rem;
  color: #495060;
}

.right {
  width: 80%;
  margin: 0;
  height:100%;
  overflow: scroll;
  background-color: #f8f8f9;
}

.type {
  height: 1100rpx;
  width: 570rpx;
  margin: 15rpx;
  background-color: #fff;
}

.scoll-h {
  height: 100%;
}

.scoll-h::-webkit-scrollbar {
  display: none;
}

.goodcontainer {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  width: 510rpx;
  height: 600rpx;
  margin: auto;
}

.categoryname {
  width: 200rpx;
  height: 50rpx;
  font-size: 16px;
}

.goodpack {
  width: 510rpx;
  height: 458rpx;
}

.goodpicture {
  width: 140rpx;
  height: 140rpx;
  margin-left: 24rpx;
  padding-top: 35rpx;
}

.goodtext {
  margin-left: 24rpx;
  padding-top: 10rpx;
  font-size: 0.7rem;
  width: 140rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #495060;
}