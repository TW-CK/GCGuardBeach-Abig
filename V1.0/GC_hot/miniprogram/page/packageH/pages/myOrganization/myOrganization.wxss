.room {
    position: absolute;
    height: 80rpx;
    right: 20rpx;
    bottom: 200rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
    border-radius: 26rpx;
    padding-right: 10rpx;
    z-index: 1;
}

.room .avatar-room image {
    border-radius: 50%;
    width: 60rpx;
    height: 60rpx;
    margin: 10rpx;
}

.room .name-room {
    font-size: 0.7rem;
    font-weight: bolder;
    color: #495060;
    padding-top: 10rpx;
}

.room .time-room {
    font-size: 0.6rem;
    color: #80848f;
}

.class-room {
    animation: myshow 3s;
    animation-fill-mode: forwards;
    animation-timing-function: ease-out;
}

@keyframes myshow {
    0% {
        transform: scale(0);
        right: -400rpx;
        opacity: 1;
    }

    40% {
        transform: scale(1);
        right: 20rpx;
        opacity: 1;
    }

    70% {
        transform: scale(1);
        right: 20rpx;
        opacity: 1;
    }

    100% {
        transform: scale(0);
        opacity: 0;
        bottom: 300rpx;
    }
}

/* 表情包 */
.fish {
    width: 80%;
    height: 400rpx;
    background: #fff;
    z-index: 5;
    position: fixed;
    left: 10%;
    bottom: 30%;
    border-radius: 10rpx;
}

.fish-img {
    width: 25%;
    height: 160rpx;
    list-style-type: none;
    float: left;
    margin-top: 20rpx;
}

.fish-img image {
    width: 80%;
    max-height: 160rpx;
    margin: auto;
}

swiper {
    width: 100%;
    height: 100%;
}

.fish-close {
    animation: closeFish 0.5s;
    animation-fill-mode: forwards;
    animation-timing-function: ease-out;
}

@keyframes closeFish {
    0% {
        transform: rotateX(10deg);
        width: 80%;
        opacity: 1;
    }

    100% {
        transform: rotateX(120deg);
        width: 0;
        opacity: 0;
    }
}

.fish-mask {
    animation: maskFish 0.5s;
    animation-fill-mode: forwards;
    animation-timing-function: ease-out;
}

@keyframes maskFish {
    0% {
        transform: rotateX(120deg);
        width: 0;
        opacity: 0;
    }

    100% {
        transform: rotateX(10deg);
        width: 80%;
        opacity: 1;
    }
}