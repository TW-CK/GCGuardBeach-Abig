.submit {
    width: 100%;
    height: 50px;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    box-shadow: 0 2px 2px rgba(10, 16, 20, .24), 0 0 2px rgba(10, 16, 20, .12);
}

page {
    background: #e9eaec;
}

.submit .input {
    width: 70%;
    height: 80rpx;
    margin: 10rpx auto;
    background: #fff;
    line-height: 30rpx;
}

.input input {
    width: 90%;
    height: 80rpx;
    margin: 5rpx auto;
}

.btn {
    width: 30%;
    margin: auto;
}

.btn button {
    display: block;
    margin: 0 auto;
    width: 70%;
}

.content {
    overflow: scroll;
}

.content-all {
    width: 96%;
    margin: 20rpx auto;
    display: flex;
    flex-direction: row;
}

.content-all2 {
    width: 96%;
    margin: 20rpx auto;
    display: flex;
    flex-direction: row;
}

.content-all .msg {
    display: flex;
    flex-direction: column;
}

.content-all2 .msg2 {
    display: flex;
    flex-direction: column;
    margin-left: auto;
}

.avatar {
    margin-top: 40rpx;
}

.content-all .avatar image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.content-all2 .avatar image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.msg text {
    font-weight: bolder;
    margin-left: 20rpx;
    font-size: 0.8rem;
    color: #1c2438;
}

.msg2 text {
    font-weight: bolder;
    margin-right: 20rpx;
    font-size: 0.8rem;
    color: #1c2438;
    text-align: right
}

.msg span {
    font-size: 0.7rem;
    color: #80848f;
    margin-left: 20rpx;
}

.msg2 span {
    font-size: 0.7rem;
    color: #80848f;
    margin-right: 20rpx;
}

.arrow-left {
    display: flex;
    flex-direction: row;
}

.arrow-left .left {
    width: 0;
    height: 0;
    border-top: 20rpx solid transparent;
    border-bottom: 10rpx solid transparent;
    border-right: 20rpx solid #FFF;
    margin-top: 10rpx;
}

.msg .content {
    width: 80%;
    padding: 20rpx;
    font-size: 0.8rem;
    text-align: center;
    background: #FFF;
    color: #495060;
    border-radius: 0 10rpx 10rpx 10rpx;
    box-shadow: 0 2px 2px #bbbec4, 0 0 2px #bbbec4;
}

.arrow-left .left2 {
    width: 0;
    height: 0;
    border-top: 20rpx solid transparent;
    border-bottom: 10rpx solid transparent;
    border-left: 20rpx solid #19be6b;
    margin-top: 10rpx;
}

.msg2 .content2 {
    width: 80%;
    padding: 20rpx;
    font-size: 0.8rem;
    text-align: center;
    background: #19be6b;
    color: #495060;
    border-radius: 10rpx 0 10rpx 10rpx;
    box-shadow: 0 2px 2px #bbbec4, 0 0 2px #bbbec4;
}