.arrow-left2 {
    display: flex;
    flex-direction: row;
    margin-left: auto;
}

.arrow-left image {
    width: 300rpx;
    height: 300rpx;
}

.arrow-left2 image {
    width: 300rpx;
    height: 300rpx;
}

.arrow-left2 .left2 {
    width: 0;
    height: 0;
    border-top: 20rpx solid transparent;
    border-bottom: 10rpx solid transparent;
