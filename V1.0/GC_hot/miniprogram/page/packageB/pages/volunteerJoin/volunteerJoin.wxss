.add-cart .add-cart-btn {
    background: linear-gradient(to right, #2b85e4, #7cc2f0);
    color: #fff;
    border-radius: 50px;
    padding: 0px;
    width: 300rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 15rpx 0 0 200rpx;
}

.content-msg {
    width: 90%;
    margin: 30rpx auto;
    background: #fff;
    border-radius: 20rpx;
}

.content-list span {
    color: #80848f;
    float: right;
    margin-left: 30rpx;
    line-height: 37rpx;
    font-size: 0.6rem;
}

.content-msg .title {
    border-bottom: 1rpx solid #e9eaec;
}

.content-msg .title text {
    font-size: 1rem;
    color: #1c2438;
    padding: 30rpx;
}

.msg {
    padding: 30rpx;
    font-size: 0.9rem;
    color: #495060;
    padding-block-end: 100rpx;
}