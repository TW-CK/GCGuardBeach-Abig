.title-img {
    width: 90%;
    height: 350rpx;
    margin: 20rpx auto;
    border-radius: 10rpx;
    background: #fff;
    box-shadow:rgb(11, 234, 235) 0px 0px 18px inset;
}

.title-img image {
    width: 100%;
    height: 350rpx;
    border-radius: 10rpx;
}

.title-content {
    width: 96%;
    margin: 30rpx auto;
    border-radius: 30rpx;
}

.title-row {
    display: flex;
    flex-direction: row;
}

.title-free {
    font-weight: bolder;
    color: #1296db;
    font-size: 1.4rem;
    padding-left: 30rpx;
}

.content-title text {
    font-size: 1.1rem;
    font-weight: bolder;
    padding-left: 30rpx;
    color: #1c2438;
}

