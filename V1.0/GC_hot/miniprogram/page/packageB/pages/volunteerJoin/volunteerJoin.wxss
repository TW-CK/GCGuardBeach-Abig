.content-list {
    display: flex;
    flex-direction: row;
    margin: 10rpx 0 0 30rpx;
}

.content-list text {
    padding-left: 20rpx;
    color: #80848f;
    font-size: 0.7rem;
}

.content-list image {
    width: 30rpx;
    height: 30rpx;
}

.title-enjoy {
    display: flex;
    flex-direction: row;
    margin-left: auto;
    padding-right: 30rpx;
}

.title-enjoy text {
    font-size: 0.7rem;
    color: #80848f;
}

.title-enjoy image {
    width: 40rpx;
    height: 40rpx;
}

.title-title-row {
    display: flex;
    flex-direction: row;
}

.title-title-row text {
    font-weight: bolder;
    font-size: 1.1rem;
    color: #1c2438;
}

.map {
    width: 96%;
    height: 300rpx;
    margin: 10rpx auto;
}

.map map {
    width: 96%;
    height: 300rpx;
    margin: auto;
}

page {
    background: #f8f8f9;
}

.submit {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: #fff;
    height: 100rpx;
    display: flex;
    flex-direction: row;
}

.submit .font {
    font-size: 0.8rem;
    color: #495060;
    padding: 10rpx 0 0 10rpx;
}

.submit text {
    font-size: 1.3rem;
    color: #1296db;
    font-weight: bolder;
}

.submit image {
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 0 0 20rpx;
}

