<!-- 未授权 -->
<view wx:if="{{isHide}}">
  <view wx:if="{{canIUse}}">
    <section>
      <view class="profile-content">
        <view class="padding-image">
          <image src="../../images/wx_login.png"></image>
        </view>
        <h1>申请获得以下权限</h1>
        <view style="font-size:0.8rem;">获得你的公开信息(昵称、头像、地区及性别)</view>
        <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权</button>
      </view>
    </section>
  </view>
  <view wx:else>请升级微信版本</view>
  <i-message id="message" />
</view>
<!-- 已授权 -->
<view style="height:1100rpx;" wx:else>
  <!-- 选择框 -->
  <view class="product-list">
    <view class="choice-bar">
      <view class="chioce-item">
        {{start}}
        <image class="icon-chioce" src="../../images/icon/list.png"></image>
      </view>
    </view>
  </view>
  <!-- 地图 -->
  <view class="index-map">
    <map id="map" longitude="{{longitude}}" latitude=" {{latitude}}" markers="{{markers}}" scale="13" show-location style="width: 100%; height: 170px;"></map>
  </view>
  <!-- 弹出菜单 -->
  <view>
    <image src="../../images/icon/indexfind.png" class="img-style" animation="{{animCollect}}" bindtap="collect"></image>
    <image src="../../images/icon/indexorder.png" class="img-style" animation="{{animTranspond}}" bindtap="transpond"></image>
    <image src="../../images/icon/indexplus.png" class="img-plus-style" animation="{{animPlus}}" bindtap="plus"></image>
  </view>
  <!-- 周边环境预报 -->
  <view class="tipsection">
    <view class="index-tips">
      <view class="imagestips">
        <image src="../../images/testimages.jpg" style="width:400rpx;height:400rpx" mode="aspectFill" />
        <view class="imagestexttips">
          <view>
            <text style="font-size:26px;color:#fff;float:left;">26°</text>
            <view style="width:70rpx;height:70rpx;float:left;margin-top:10rpx;margin-left:10rpx;">
              <image src="../../images/sun.png" style="width:70rpx;height:70rpx;padding-top:10rpx;" mode="aspectFill" />
            </view>
          </view>
          <view style="float:left;font-size:12px;color:#fff;margin-top:15rpx;">今天 9月29日 星期日 晴</view>
        </view>
        <view class="imagesline"></view>
      </view>
      <view class="texttips">荷笠带斜阳，青山独归远</view>
    </view>
    <view class="index-othertips">
      <i-tag style="opacity: 0.8;" class="i-tags" color="yellow">空气质量：良</i-tag>
      <i-tag class="i-tags" color="blue">海洋水质：中</i-tag>
      <i-tag class="i-tags" color="green">海滩环境：及格</i-tag>
    </view>
  </view>
  <view>
    <i-drawer mode="left" visible="{{showLeft1}}" bind:close="transpond">
      <view class="demo-container">
        <view class="rank_header">
          <i-row>
            <i-col span="6" i-class="col-class">排名</i-col>
            <i-col span="6" i-class="col-class">用户</i-col>
            <i-col span="6" i-class="col-class">称号</i-col>
            <i-col span="6" i-class="col-class">爱心指数</i-col>
          </i-row>
        </view>
        <view wx:for="{{rank}}" wx:for-item="item" wx:key="id">
          <i-row>
            <i-col span="6" i-class="col-class">{{item.num}}</i-col>
            <i-col span="6" i-class="col-class">{{item.user}}</i-col>
            <i-col span="6" i-class="col-class">{{item.title}}</i-col>
            <i-col span="6" i-class="col-class">{{item.index}}</i-col>
          </i-row>
        </view>
      </view>
    </i-drawer>
  </view>
</view>